@page
@model asp.Pages.Client.OrdersModel
@{
    ViewData["Title"] = "Мои заказы";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Мои заказы</h1>
        <a href="/Client/Index" class="btn btn-secondary">← Назад</a>
    </div>

    <form method="get" class="mb-4">
        <div class="row">
            <div class="col-md-4">
                <label for="phone" class="form-label">Номер телефона</label>
                <input type="text" class="form-control" id="phone" name="phone" value="@Model.PhoneFilter" />
            </div>
            <div class="col-md-4">
                <label for="email" class="form-label">Email</label>
                <input type="email" class="form-control" id="email" name="email" value="@Model.EmailFilter" />
            </div>
            <div class="col-md-4 d-flex align-items-end">
                <button type="submit" class="btn btn-primary">Найти заказы</button>
            </div>
        </div>
    </form>

    @if (Model.Orders != null && Model.Orders.Any())
    {
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>№ заказа</th>
                    <th>Устройство</th>
                    <th>Статус</th>
                    <th>Стоимость</th>
                    <th>Действия</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var order in Model.Orders)
                {
                    <tr>
                        <td>@order.Id</td>
                        <td>@(order.DeviceType ?? "null") @(order.DeviceModel ?? "null")</td>
                        <td>@order.Status</td>
                        <td>@(order.FinalCost.HasValue ? $"{order.FinalCost:C}" : (order.PreliminaryCost.HasValue ? $"{order.PreliminaryCost:C}" : "Не указана"))</td>
                        <td>
                            <a href="/Client/OrderDetails/@order.Id" class="btn btn-sm btn-info">Просмотр</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else if (!string.IsNullOrEmpty(Model.PhoneFilter) || !string.IsNullOrEmpty(Model.EmailFilter))
    {
        <p>Заказы не найдены.</p>
    }
    else
    {
        <p>Введите номер телефона или email для поиска заказов.</p>
    }
</div>
